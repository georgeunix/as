<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <title>jqGrid Ejemplo 1: Cargar datos de una tabla MySql </title>
        <link rel="stylesheet" type="text/css" media="screen" href="{{asset('borrar/css/redmond/jquery-ui-1.10.3.custom.css')}}" />
        <link rel="stylesheet" type="text/css" media="screen" href="{{asset('borrar/jqgrid/css/ui.jqgrid.css')}}" />

        <script src="{{asset('borrar/jqgrid/js/jquery-1.7.1.min.js')}}" type="text/javascript"></script>
        <script src="{{asset('borrar/jqgrid/js/jquery-ui-1.8.16.min.js')}}" type="text/javascript"></script>
        <script src="{{asset('borrar/jqgrid/js/i18n/grid.locale-es.js')}}" type="text/javascript"></script>
        <script src="{{asset('borrar/jqgrid/js/jquery.jqGrid.min.js')}}" type="text/javascript"></script>



        <script type="text/javascript">
            $(document).ready(function(){
                jQuery("#tblprueba").jqGrid({
                    url: '{{path('_prueba')}}',
                    height: 320,
                    datatype: 'json',
                    mtype: 'POST',
                    colNames: ['CODIGO', 'TIPO_DE_DOCUMENTO', 'FECHA_CREACION', 'CICLO', 'INDICATIVO_DEL_DOCUMENTO', 'ASUNTO', 'USUARIO'],
                    colModel: [
                        {name: 'CODIGO', index: 'CODIGO', width: "250px", resizable: true, sortable: true, align: "center"},
                        {name: 'TIPO_DE_DOCUMENTO', index: 'TIPO_DE_DOCUMENTO', width: "250px", resizable: true, sortable: true, align: "center"},
                        {name: 'FECHA_CREACION', index: 'FECHA_CREACION', width: "250px", resizable: true, sortable: true, align: "center"},
                        {name: 'CICLO', index: 'CODIGO', width: "250px", resizable: true, sortable: true, align: "center"},
                        {name: 'INDICATIVO_DEL_DOCUMENTO', index: 'TIPO_DE_DOCUMENTO', width: "250px", resizable: true, sortable: true, align: "center"},
                        {name: 'ASUNTO', index: 'FECHA_CREACION', width: "250px", resizable: true, sortable: true, align: "center"},
                        {name: 'USUARIO', index: 'FECHA_CREACION', width: "250px", resizable: true, sortable: true, align: "center"},
                    ],
                    pager: '#paginacion',
                    rowNum: 10,
                    rowList: [10, 15],
                    caption: 'prueba'

                }).jqGrid("filterToolbar");

               //$("#tblprueba").clearGridData(true).trigger("reloadGrid");
                //$("#tblprueba").jqGrid('setGridParam', {data: "", autowidth: true}).trigger('reloadGrid');
            });
            </script>

        </head>
        <body>
            hola
            <table id="tblprueba"></table>
            <div id="paginacion"> </div>
        </body>
    </html>

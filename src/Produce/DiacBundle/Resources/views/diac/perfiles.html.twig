         function guardar_perfil(){
            descri=$("#descripcion").val();
            if (descri ==""){
              alert("Por favor ingrese el nombre del perfil");
              $("#descripcion").focus();
              return false;
              
            }else{
                idgrupo=$("#hdncodigo").val();
                if (idgrupo==""){
                    idgrupo="";
                }

                accion=$("#hdnaccion").val();
                if (accion=="N"){
                   accion="N";
                }else{
                   accion="A"; 
                }

                $.ajax({
                    type: "POST",
                    url: "{{path('guardaperfil')}}",
                    async: "true",
                    data: {accion:accion, idgrupo: idgrupo, descri: descri }
                    }).done(function(msg) {
                        //alert(msg);
                        alert("Los datos han sido guardados correctamente.");
                        $("#"+msg+"  td:eq(2)").html(descri);
                        cancelar();
                    });
            }
         }
         
         function editar_perfil(id){
             des = $("#"+id+"  td:eq(2)").text();
             $("#pnl_perfil").show();
             $("#hdncodigo").val(id);
             $("#descripcion").val(des);
             $(".titulo_perfil").html("Editar Perfil");
             //$("#pnl_opciones").hide();
             $("#hdnaccion").val("A");
         }
         
         function cancelar(){
             $(".titulo_perfil").html("Crear Perfil");
             $("#descripcion").val("");
             //$("#pnl_opciones").hide();
             $("#hdnaccion").val("N");
         }
         
         function configura_opc(id){
            //$("#pnl_opciones").show();
            //$("#pnl_perfil").hide();
            $("#hdnidgrupo").val(id);
            
            $.ajax({    
                type: "POST",
                url: "{{path('opcperfil')}}",
                async: "true",
                data: {idgrupo:id}
                }).done(function(msg) {
                    //alert(msg);
                    $("#dialogOpciones").dialog("open");
                    $("#dialogOpciones").html(msg);
                });
         }
         
